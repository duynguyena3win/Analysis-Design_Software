<Window x:Class="WAO_Player.Control.CreatePlaylist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Playlist" Height="130" Width="360" TextBlock.TextAlignment="Center" WindowStyle="ToolWindow" >
    <Grid>

        <Label Content="Name Playlist" Width="95" Height="30" FontSize="18" FontWeight="Black" FontFamily="Agency FB" Margin="2,9,235,51"/>
        <TextBox Name="TextBox" FontSize="20" Width="200" Height="30" FontWeight="Black" FontFamily="Agency FB" TextChanged="TextBox_TextChanged" Margin="122,9,10,51"/>
        <Button Name="Btn_OK" Content="OK" Width="100" Height="30" FontSize="18" FontWeight="Bold" Click="Btn_OK_Click" FontFamily="Agency FB" Margin="10,50,222,10" />
        <Button Content="Cancel" FontSize="18" FontFamily="Agency FB"  FontWeight="Bold" Click="Button_Click" Width="100" Height="30" Margin="130,50,102,10" />
    </Grid>
</Window>
